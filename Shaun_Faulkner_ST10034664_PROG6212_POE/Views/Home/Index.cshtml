@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome</title>
    <style>

        /* Page Title Styling */
        .page-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #4CAF50;
            text-align: center;
        }

        /* Button Container Styling */
        .button-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
            padding: 20px;
        }

        /* Button Styling */
        .btn-navigate {
            background-color: #4CAF50; /* Green */
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .btn-navigate:hover {
                background-color: #45a049; /* Darker Green */
            }

            .btn-navigate:active {
                background-color: #3e8e41;
                transform: scale(0.98);
            }
    </style>
</head>
<body>
    <h1 class="page-title">Welcome to the Contract Monthly Claim System</h1>

    <div class="button-container">
        <button class="btn-navigate" onclick="location.href='/Lecturer/LecturerLogin'">Lecturer Login</button>
        <button class="btn-navigate" onclick="location.href='/Lecturer/LecturerSignUp'">Lecturer Sign Up</button>
        <button class="btn-navigate" onclick="location.href='/Admin/AdminLogin'">Admin Login</button>
    </div>
</body>
</html>