@model Shaun_Faulkner_ST10034664_PROG6212_POE.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<!DOCTYPE html>
<html>
    <head>
        <title>Submit New Claim</title>
    </head>
<body>
    <h1 class="submit-claim-title">Submit New Claim</h1>

    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
        <div>
            <label for="hoursWorked">Hours Worked:</label>
            <input asp-for="HoursWorked" type="number" id="hoursWorked" name="HoursWorked" />
        </div>
        <div>
            <label for="hourlyRate">Hourly Rate:</label>
            <input asp-for="HourlyRate" type="number" id="hourlyRate" name="HourlyRate" />
        </div>
        <div>
            <label for="additionalNotes">Additional Notes:</label>
            <textarea asp-for="AdditionalNotes" id="additionalNotes" name="AdditionalNotes"></textarea>
        </div>
        <div>
            <label for="supportingDocuments">Supporting Documents:</label>
            <input asp-for="SupportingDocuments" type="file" id="supportingDocuments" name="SupportingDocuments" />
        </div>
        <button type="submit">Submit Claim</button>
    </form>

    <p class="back-to-dashboard"><a href="/Lecturer/Dashboard">Back to Dashboard</a></p>
</body>
</html>