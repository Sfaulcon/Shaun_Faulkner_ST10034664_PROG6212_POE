@{
    ViewData["Title"] = "Approve Deny Claims";
}

<!DOCTYPE html>
<html>
    <head>
        <title>Approve / Deny Claims</title>
        <link rel="stylesheet" href="~/css/admin.css" />
    </head>
    <body>
        <h1 class="approve-deny-title">Pending Claims</h1>

    <!-- Will display any pending claims to approve or deny. -->
    <table class="claims-table">
        <thead>
            <tr>
                <th>Lecturer Name</th>
                <th>Email</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Additional Notes</th>
                <th>Supporting Documents</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims) // Assuming you have a Claims property in your model
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Email</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.AdditionalNotes</td>
                    <td><a href="@claim.SupportingDocumentUrl" class="view-document">View Document</a></td>
                    <td>
                        <form method="post" action="/Admin/ApproveDenyClaim">
                            <input type="hidden" name="claimId" value="@claim.Id" />
                            <button type="submit" class="btn-approve" name="action" value="approve">Approve</button>
                            <button type="submit" class="btn-deny" name="action" value="deny">Deny</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>