

@{
    ViewData["Title"] = "Approve Deny Claims";
}

<!DOCTYPE html>
<html>
<head>
    <title>Approve / Deny Claims</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <h1 class="page-title">Approve / Deny Claims</h1>

    <table class="claims-table">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Additional Notes</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <form method="post" asp-action="ApproveClaim">
                                <input type="hidden" name="claimId" value="" />
                                <button type="submit" class="btn-approve">Approve</button>
                            </form>
                            <form method="post" asp-action="DenyClaim">
                                <input type="hidden" name="claimId" value="" />
                                <button type="submit" class="btn-deny">Deny</button>
                            </form>
                        </td>
                    </tr>

                <tr>
                    <td colspan="6">No claims to approve or deny.</td>
                </tr>
        </tbody>
    </table>

    <p><a href="/Lecturer/Dashboard" class="back-to-dashboard">Back to Dashboard</a></p>
</body>
</html>