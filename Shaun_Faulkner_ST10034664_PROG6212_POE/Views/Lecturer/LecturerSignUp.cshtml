@model Shaun_Faulkner_ST10034664_PROG6212_POE.Models.Lecturer;

<h2>Lecturer Sign Up</h2>

<form asp-controller="Lecturer" asp-action="LecturerSignUp" method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" asp-for="Name" />
    </div>
    <div>
        <label for="surname">Surname:</label>
        <input type="text" id="surname" name="Surname" asp-for="Surname" />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" asp-for="Email" />
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="Password" asp-for="Password" />
    </div>
    <button type="submit">Sign Up</button>
</form>