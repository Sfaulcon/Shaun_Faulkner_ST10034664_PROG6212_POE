@using System.Linq
@model ClaimsDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <title>Claims Dashboard</title>
    <style>
        .container {
            margin: 20px auto;
            padding: 20px;
            max-width: 900px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .welcome-message {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .dashboard-title, .section-title {
            color: #0056b3;
            margin-bottom: 15px;
        }

        .claims-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .claims-table th, .claims-table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
            }

            .claims-table th {
                background-color: #f1f1f1;
            }

        .no-claims-message {
            font-style: italic;
            color: #999;
        }

        .action-links .btn-primary,
        .action-links .btn-secondary,
        .btn-logout,
        .btn-back {
            display: inline-block;
            margin: 10px 0;
            padding: 10px 15px;
            border: none;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-secondary {
            background-color: #28a745;
        }

        .btn-logout, .btn-back {
            background-color: #dc3545;
        }

            .btn-primary:hover,
            .btn-secondary:hover,
            .btn-logout:hover,
            .btn-back:hover {
                opacity: 0.9;
            }

        .btn-download {
            color: #0056b3;
            text-decoration: underline;
        }

            .btn-download:hover {
                color: #003d80;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="welcome-message">Welcome, @Context.Session.GetString("LecturerName")!</h1>

        <h2 class="dashboard-title">My Claims</h2>

        <h3 class="section-title">Pending Claims</h3>
        @if (Model.PendingClaims.Any())
        {
            <table class="claims-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Submission Date</th>
                        <th>Status</th>
                        <th>Total Amount Payable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.PendingClaims)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td>@claim.SubmissionDate</td>
                            <td>@claim.Status</td>
                            <td>R @claim.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-claims-message">No Pending Claims Available</p>
        }

        <h3 class="section-title">Approved Claims</h3>
        @if (Model.ApprovedClaims.Any())
        {
            <table class="claims-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Submission Date</th>
                        <th>Status</th>
                        <th>Total Amount Payable</th>
                        <th>Invoice</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.ApprovedClaims)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td>@claim.SubmissionDate</td>
                            <td>@claim.Status</td>
                            <td>R @claim.TotalAmount</td>
                            <td>
                                <a href="@Url.Content("~" + claim.InvoicePath)" class="btn-download" download>Download Invoice</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-claims-message">No Approved Claims Available</p>
        }

        <h3 class="section-title">Denied Claims</h3>
        @if (Model.DeniedClaims.Any())
        {
            <table class="claims-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Submission Date</th>
                        <th>Status</th>
                        <th>Total Amount Payable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.DeniedClaims)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td>@claim.SubmissionDate</td>
                            <td>@claim.Status</td>
                            <td>R @claim.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-claims-message">No Denied Claims Available</p>
        }

        <p class="action-links">
            <a asp-controller="Claim" asp-action="SubmitClaim" class="btn-primary">Submit New Claim</a>
            <a asp-controller="Lecturer" asp-action="ManageProfile" class="btn-secondary">Manage Profile</a>
        </p>

        <p class="logout-link">
            You are logged in |
            <a asp-controller="Lecturer" asp-action="Logout" class="btn-logout">Logout</a>
        </p>

        <p class="back-to-home">
            <a href="/Home/Index" class="btn-back">Back to Home</a>
        </p>
    </div>
</body>
</html>
