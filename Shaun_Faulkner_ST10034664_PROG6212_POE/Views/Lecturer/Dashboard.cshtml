@using System.Linq
@model List<Shaun_Faulkner_ST10034664_PROG6212_POE.Models.Claim>

@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <title>Claims Dashboard</title>
    <link rel="stylesheet" href="~/css/lecturer.css" />
</head>
<body>
    <h1 class="dashboard-title">Claims Dashboard</h1>

    @if (Model.Any())
    {
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Email</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Submission Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.Email</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.SubmissionDate.ToShortDateString()</td>
                        <td>@claim.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No claims submitted yet.</p>
    }

    <p class="back-to-home"><a href="/Home/Index">Back to Home</a></p>
</body>
</html>
