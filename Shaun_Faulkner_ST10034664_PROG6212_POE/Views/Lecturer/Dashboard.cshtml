@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html>
    <head>
        <title>Lecturer Dashboard</title>
        <link rel="stylesheet" href="~/css/lecturer.css" />
    </head>
<body>
    <div class="dashboard-header">
        <h1>Lecturer Dashboard</h1>
    </div>
    <div class="claims-section">

        <!-- Will display any active claims with status -->
        <h2>Active Claims</h2>
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Email</th>
                    <th>Hours Worked</th>
                    <th>Supporting Documents</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Shaun Faulkner</td>
                    <td>shaunf@gmail.com</td>
                    <td>12</td>
                    <td><a href="#">View Document</a></td>
                    <td class="status-pending">Pending</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="claims-section">

        <!-- Will display past claims made -->
        <h2>Past Claims</h2>
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Email</th>
                    <th>Hours Worked</th>
                    <th>Supporting Documents</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Shaun Faulkner</td>
                    <td>shaunf@gmail.com</td>
                    <td>12</td>
                    <td><a href="#">View Document</a></td>
                    <td class="status-approved">Approved</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Option to submit new claim, will redirect to new claims page -->
    <button class="btn-submit-claim" onclick="location.href='/Lecturer/SubmitClaim'">Submit New Claim</button>
</body>
</html>
