@model IEnumerable<YourNamespace.Models.Claim>
@{
    ViewData["Title"] = "Dashboard";
}


<!DOCTYPE html>
<html>
<head>
    <title>Claims Dashboard</title>
    <link rel="stylesheet" href="~/css/lecturer.css" />
</head>
<body>
    <h1 class="page-title">Claims Dashboard</h1>

    <div class="claims-section">
        <h2>Current Claims</h2>
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Additional Notes</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CurrentClaims.Any())
                {
                    foreach (var claim in Model.CurrentClaims)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate</td>
                            <td>@claim.AdditionalNotes</td>
                            <td>@claim.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No current claims.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="claims-section">
        <h2>Past Claims</h2>
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Additional Notes</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PastClaims.Any())
                {
                    foreach (var claim in Model.PastClaims)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate</td>
                            <td>@claim.AdditionalNotes</td>
                            <td>@claim.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No past claims.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
